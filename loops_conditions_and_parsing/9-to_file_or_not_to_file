#!/usr/bin/env bash
#This script displays information about the School file with conditions.
fe=(-f "school")
fne=(-empty "school")
fr=(-f "school")
if [ $fe ]
 then
     echo "school file exists"
     if [ $fne ]
     then
	 echo "school file is empty"
     else
	 echo "school file is not empty"
     fi
        if [ $fr ]
        then
	    echo "school is a regular file"
        else
	    true
         fi
     
 else
        echo "school file does not exist" 
 fi	
